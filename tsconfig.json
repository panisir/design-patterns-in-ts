{
  "compilerOptions": {
    "target": "ES2016",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": false,     
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "src/hackerrank/*", "./src/lessons/*"]
}